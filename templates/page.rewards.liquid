<script>
  $(window).on('load', function () {	
    
      $('#slider, .slider-overlay').hide();
      $('.manage-perks').click(function() {
        $('.slider-overlay').show();
        $('#slider').show().animate({
            'width': '90%',
            'max-width': '500px'
        },500);
        $('body').addClass('slider-open');
      });
    
      $(document).mouseup(function(e) {
          var container = $("#slider");
          // if the target of the click isn't the container nor a descendant of the container
          if (!container.is(e.target) && container.has(e.target).length === 0) {
              container.hide();
              $('.slider-overlay').hide();
        	  $('body').removeClass('slider-open');
          }
      });
    
      $('#btn-close-slider').click(function() {
        $('#slider, .slider-overlay').hide();
        $('body').removeClass('slider-open');
      });
    
    
      $('.lion-rule-item--signup .lion-rule-item__points').insertBefore('.lion-rule-item--signup .lion-rule-item__title');
      $('.lion-rule-item--purchase .lion-rule-item__points').insertBefore('.lion-rule-item--purchase .lion-rule-item__title');
      $('.lion-rule-item--110138 .lion-rule-item__points').insertBefore('.lion-rule-item--110138 .lion-rule-item__title');
      $('.lion-rule-item--137085 .lion-rule-item__points').insertBefore('.lion-rule-item--137085 .lion-rule-item__title');
