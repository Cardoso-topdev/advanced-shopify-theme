      $('.lion-rule-item--facebook-like .lion-rule-item__points').insertBefore('.lion-rule-item--facebook-like .lion-rule-item__title');
      $('.lion-rule-item--newsletter-signup .lion-rule-item__points').insertBefore('.lion-rule-item--newsletter-signup .lion-rule-item__title');
      $('.lion-rule-item--stampedio-review .lion-rule-item__points').insertBefore('.lion-rule-item--stampedio-review .lion-rule-item__title');
      $('.lion-tier-compare__header-cell--tier-0').text("Jade");
      $('.lion-tier-compare__header-cell--tier-1').text("Rose Quartz");
      $('.lion-tier-compare__header-cell--tier-2').text("Nephrite");
