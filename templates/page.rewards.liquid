      $('.lion-rule-item--110138 .lion-action-button--tile').hide();
      $('.lion-rule-item--purchase .lion-action-button').after("<div class='lion-action-button lion-rule-item__button'><a href='https://primallypure.com/'>Shop Now</a></div>");
