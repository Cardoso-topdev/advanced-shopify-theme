#purescription .full-routine .reg-step {
  text-align: center;
}

#purescription .full-routine h4,
#purescription .regimen-ingredients h4{
  font-family: "Novel" !important;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin: 30px auto 30px auto !important;
  background: url({{ 'highlight.png' | asset_url }});
  background-position: center 12px;
  background-repeat: repeat-x;
  display: inline-block;
  width: auto;
}

#purescription .full-routine .reg-step p,
#purescription .full-routine .reg-step ul li {
  margin: 0px auto 30px auto;
  text-align: left !important; 
  max-width: 600px;
  width:90%;
}

#purescription .full-routine .reg-step p {
  padding: 15px 30px;
  border: 1px solid #ccc;
  font-style: italic;
}

#purescription .full-routine .reg-step ul li {
  background-image: url({{ 'checkbox.png' | asset_url }});   
  background-repeat: no-repeat;
  background-position: left 5px;
  padding-left: 30px;
  
}


#purescription .regimen-routine {
  background: #EDEEF1 url({{ 'Ingredients-BG.jpg' | asset_url }});
  background-size: 1000px auto;
  background-position: center bottom;
  background-repeat: no-repeat;
  padding: 60px 0px 120px 0px;
  margin-bottom: 60px;
  width: 100%;
}

#purescription .regimen-routine .time {
  flex: 33.33% 0 0;
  padding: 30px;
  margin-top: 30px;
}

#purescription .regimen-routine .time .head-wrap {
  display: flex;
  justify-content: center;
}

#purescription .regimen-routine h4 {
  text-transform: uppercase;
  text-align: center;
  font-family: "Novel" !important;
  line-height: 50px;
}

#purescription .regimen-routine .icon {
  content: "";
  width: 50px;
  height: 50px;
  margin-right: 30px;
}

#purescription .regimen-routine ol {
  margin-top: 30px;
  list-style: decimal;
}

#purescription .regimen-routine ol li {
  margin: 10px 0px;
}

#purescription .featured-posts {
  width: 90%;
  max-width: 100%;
}

@media screen and (max-width: 767px) {
  #purescription .regimen-routine ol {
    max-width: 80%;
    margin: auto;
    margin: 30px auto auto auto;
    text-align: center;
    list-style: none;
  }
}

#purescription .regimen-ingredients {
  margin-top: 60px;
}

#purescription .regimen-ingredients .ingredient {
  flex: 33.33% 0 0;
  padding: 0px 30px 0px 30px;
  margin-top: 30px;
  text-align: center;
}

#purescription .regimen-ingredients .ingredient .ingredient-image {
  width: 100%;
  max-width: 150px;
  height: auto;
  margin: auto;
}

#purescription .regimen-ingredients .ingredient .ingredient-image img {
  width: 100%;
}
  
  
#purescription .regimen-faq {
  padding: 60px 0px;
  margin: 0px 0 60px 0px;
}

#purescription .regimen-faq .nested-accordion {
  width: 80%;
  max-width: 600px;
  margin: auto;
}


/* text links */

#purescription p a,
#purescription ul a,
#purescription ol a{
  color: #222;
  text-decoration: underline;
}

#purescription p a:hover,
#purescription ol li a:hover,
#purescription ul li a:hover {
  color: #666;
}

#purescription h2 a {
  text-decoration: none !important;
}

.post-title {
  text-transform: uppercase;
}