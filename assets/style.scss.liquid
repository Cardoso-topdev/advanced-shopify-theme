/* ACCORDION WIDGET */

.nested-accordion {
  padding: 20px 0px;
  cursor: pointer;
  border-bottom: 1px solid #363636;
  position: relative;
  max-width: 600;
  margin: auto;
}

.nested-accordion .nested-accordion {
  border-bottom: 1px solid #ccc;
}

.nested-accordion h3,
.nested-accordion h3 {
 	font-family: "Novel", sans-serif !important; 
    text-transform: none;
    letter-spacing: 0;
    padding-right: 20px;
    font-weight: normal;
    font-size: 16px;
}

.nested-accordion h3:after {
  content: "+";
  color: #363636;
  font-size: 15px;
  font-weight: 100;
  font-family: "Novel", sans-serif;
  position: absolute;
  right: 0;
  width: 20px;
}
.nested-accordion h3.selected {
}
