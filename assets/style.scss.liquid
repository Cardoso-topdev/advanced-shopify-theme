/* pullquote */

.pullquote {
  font-family: 'BellMT' !important;
  font-style: italic;
  font-size: 18px;
  text-align: center;
  line-height: 24px;
  width: 100%;
  max-width: 500px;
  margin: 60px auto 0px auto;
  padding: 0px 40px;
  position: relative;
  text-align: center !important;
}

.pullquote:before {
  content: "";
  width: 50px;
  border: .5px solid #666;
  transform: rotate(-45deg);
  display: block;
  position: absolute;
  top: -5px;
  left: -5px;
}

.pullquote:after {
  content: "";
  width: 50px;
  border: .5px solid #666;
  transform: rotate(135deg);
  display: block;
  position: absolute;
  bottom: 10px;
  right: 10px;
}


