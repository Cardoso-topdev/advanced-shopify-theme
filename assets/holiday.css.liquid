/* VIDEO */

@media screen and (max-width: 875px) {
  video {
    display: none;
  }
}

#holiday {
  overflow-x: hidden;
}

#holiday .content,
#holiday .content-area {
  width: 84%;
  max-width: 1400px;
}


body, html {
  height: 100%;
  min-height: 100%;
}

#video-container  {
  position: relative;
  width: 100%;
  height: 70vh;
  overflow: hidden;
  background: url({{ 'Holiday-Placeholder-Desktop.jpg' | asset_url }}) center center;
  background-size: cover;
}

@media screen and (max-width: 875px) {
  #video-container  {
    position: relative;
    width: 100%;
    height: 60vh;
    overflow: hidden;
    background: url({{ 'Holiday-Placeholder-Mobile.jpg' | asset_url }}) center center;
    background-size: cover;
  }
}

#video-container video,
.video-overlay {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  min-width: 100%;
  min-height: 100%;
}

#video-container .video-overlay {
  z-index: 400;
  background: rgba(0,0,0,.5);
}

#video-container .video-content {
  z-index: 500;
  position: absolute;
  height: 100%;
  width: 100%;
}

#video-container .video-content .inner {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column wrap;
  position: relative;
}

#video-container .promo-overlay {
  text-align: center;
  position: absolute;
  top: calc(50% - 75px);
  width: 100%;
  z-index: 999;
}

@media screen and (max-width: 867px) {
  #video-container .video-overlay,
  #video-container video {
   display: none; 
  }
}

#video-container .promo-overlay h1 {
  font-family: "Novel" !important;
  font-size: 14px;
  text-transform: uppercase;
  font-weight: 400 !important;
  margin-bottom: 20px;
  color: #fff;
  padding: 0px 30px;
}

#video-container .promo-overlay h2 {
  font-size: 22px;
  text-transform: uppercase;
  color: #FFF;
  padding: 0px 30px;
}

#video-container .promo-overlay h2:before {
  width: 150px;
  height: 1px;
  margin: 0px auto;
  text-align: center;
  display: block;
  content: "";
  padding-top: 20px;
  border-top: 1px solid #fff;
}

#video-container .promo-overlay a {
  color: #FFF;
  text-decoration: underline;
  letter-spacing: 1px;
  font-size: 10px;
  text-transform: uppercase;
}


