.popup__overlay {
  display: none;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0, 0.8);
  text-align: center;
  z-index: 999999;
}

.popup__overlay:after {
  display: inline-block;
  height: 100%;
  width: 0;
  vertical-align: middle;
  content: "";
}

.popup {
  display: inline-block;
  position: relative;
  width: 100%;
  height: 100%;
  max-width: 800px;
  max-height: 600px;
  padding: 60px 20px;
  border: 1px solid fff;
  background: fff;
  color: white;
  vertical-align: middle;
}

.popup-form__row {
  margin: 1em 0;
}

.popup__close {
  display: block;
  position: absolute;
  top: 20px;
  right: 20px;
  width: 16px;
  height: 16px;
  padding: 10px;
  cursor: pointer;
  text-align: center;
  font-size: 16px;
  line-height: 16px;
  color: #fff;
  text-decoration: none;
  font-weight: bold;
}

.popup__close:hover {
  color: #fff;
}

